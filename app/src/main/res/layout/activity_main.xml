<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound-Triggered Recorder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/thresholdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threshold: 50 dB"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />

    <SeekBar
        android:id="@+id/thresholdSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Stopped"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/currentDbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current: -- dB"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Start Monitoring"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/testNetworkButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Test Network Connection"
        android:textSize="14sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:backgroundTint="#993F3F"
        android:padding="15dp"
        android:rotationX="-3"
        android:text="Instructions:\n• Adjust threshold above ambient noise\n• Grant all permissions when prompted\n• Videos saved to Movies/SoundTrigger folder\n• Recording stops 1 minute after sound drops"
        android:textSize="14sp" />

</LinearLayout>
